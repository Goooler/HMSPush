{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "groupName": "Kotlin",
            "matchPackagePrefixes": [
                "com.google.devtools.ksp",
                "androidx.compose.compiler"
            ],
            "matchPackagePatterns": [
                "org.jetbrains.kotlin.*"
            ]
        },
        {
            "groupName": "AGP",
            "matchPackagePatterns": [
                "com.android.*"
            ]
        }
    ]
}
